# ========================================
# XAUUSD Trading Bot - Environment Variables
# ========================================
# Copy file ini ke .env dan isi dengan nilai yang sesuai

# ========================================
# CRITICAL - HARUS DIISI
# ========================================

# Token bot Telegram dari @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Daftar user ID yang diizinkan (pisahkan dengan koma)
AUTHORIZED_USER_IDS=123456789,987654321

# ========================================
# KOYEB DEPLOYMENT
# ========================================

# Mode webhook (otomatis aktif di Koyeb)
TELEGRAM_WEBHOOK_MODE=true

# URL webhook (opsional - akan auto-detect di Koyeb)
# WEBHOOK_URL=https://your-app.koyeb.app/webhook

# Domain publik Koyeb (biasanya di-set otomatis oleh Koyeb)
# KOYEB_PUBLIC_DOMAIN=your-app.koyeb.app

# ========================================
# OPTIMASI FREE TIER
# ========================================

# Mode free tier (hemat resource)
FREE_TIER_MODE=true

# Self-ping untuk mencegah idle timeout
SELF_PING_ENABLED=true
SELF_PING_INTERVAL=240

# Memory limits
MEMORY_WARNING_THRESHOLD_MB=400
MEMORY_CRITICAL_THRESHOLD_MB=450

# ========================================
# TRADING SETTINGS
# ========================================

# Mode simulasi (tidak trading sungguhan)
DRY_RUN=false

# Risk per trade (dalam persen)
RISK_PER_TRADE_PERCENT=20.0

# Fixed risk amount (dalam USD)
FIXED_RISK_AMOUNT=2.0

# Account balance awal
ACCOUNT_BALANCE=10.0

# ========================================
# SIGNAL SETTINGS
# ========================================

# Cooldown antar sinyal (0 = unlimited)
SIGNAL_COOLDOWN_SECONDS=0
MAX_TRADES_PER_DAY=0

# Auto signal replacement
AUTO_SIGNAL_REPLACEMENT_ALLOWED=true
ALLOW_MULTIPLE_SIGNALS_PER_CANDLE=true

# ========================================
# DATABASE
# ========================================

# PostgreSQL URL (opsional, akan gunakan SQLite jika kosong)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Path database SQLite
DATABASE_PATH=data/bot.db

# ========================================
# ERROR TRACKING (OPSIONAL)
# ========================================

# Sentry DSN untuk error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Environment name
ENVIRONMENT=production

# ========================================
# HEALTH CHECK
# ========================================

# Port untuk health check server
PORT=8080

# Interval health check (detik)
HEALTH_CHECK_INTERVAL=120

# ========================================
# TRADING HOURS (OPSIONAL)
# ========================================

# Unlimited trading hours
UNLIMITED_TRADING_HOURS=true

# Jam trading (0-23)
TRADING_HOURS_START=0
TRADING_HOURS_END=23
